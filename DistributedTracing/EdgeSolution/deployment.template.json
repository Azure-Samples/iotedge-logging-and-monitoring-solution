
{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": ""
          }
        },
        "modules": {
          "tempSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "kaizentm/iotsample-simulatedtemperaturesensor:0.0.1",
              "createOptions": {}
            },
            "env": {
              "MessageDelay": {
                  "value": "00:00:05"
              },
              "INSTRUMENTATION_KEY": {
                "value": "${INSTRUMENTATION_KEY}"
              },
              "AI_CONNECTION_STRING": {
                "value": "${AI_CONNECTION_STRING}"
              },
              "OTLP_ENDPOINT": {
                "value": "${OTLP_ENDPOINT}"
              }              
            } 
          },
          "FilterModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "kaizentm/iotsample-filtermodule:0.0.1",
              "createOptions": {}
            },
            "env": {
              "INSTRUMENTATION_KEY": {
                "value": "${INSTRUMENTATION_KEY}"
              },
              "AI_CONNECTION_STRING": {
                "value": "${AI_CONNECTION_STRING}"
              },
              "OTLP_ENDPOINT": {
                "value": "${OTLP_ENDPOINT}"
              }                    
            }
          },
          "OpenTelemetryCollector": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "kaizentm/iotsample-opentelemetrycollector:0.0.1",
              "createOptions": {
                "Hostname": "opentelemetrycollector",
                "HostConfig": {
                  "PortBindings": {
                    "4317/tcp": [
                      {
                        "HostPort": "4317"
                      }
                    ],
                    "4318/tcp": [
                      {
                        "HostPort": "4318"
                      }
                    ],
                    "55679/tcp": [
                      {
                        "HostPort": "55679"
                      }
                    ],
                    "1888/tcp": [
                      {
                        "HostPort": "1888"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "sensorToFilterModule": "FROM /messages/modules/tempSensor/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/FilterModule/inputs/input1\")",
          "FilterModuleToIoTHub": "FROM /messages/modules/FilterModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}